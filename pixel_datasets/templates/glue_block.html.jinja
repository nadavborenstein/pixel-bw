{% extends "base.html.jinja" %}
{%- block style %}
    {# Global Style #}
    {% import "macro/dimension.css.jinja" as dimension %}
        {{ dimension.pixel_paper(width, height, top_margin, right_margin, bottom_margin, left_margin) }}
    {% import "macro/text.css.jinja" as text %}
    {% for custom_font in custom_fonts %}
        {{ text.load_font(custom_font['file_name'], custom_font['font_name']) }}
    {% endfor %}
        {{ text.set_font(font_family, font_size) }}
        {{ text.set_hyphenation(hyphenate) }}
        {{ text.set_text_align(text_align) }}
        {{ text.set_sentence_1_style(font_family_1, font_size_1, line_height_1, word_break, line_break) }}
        {{ text.set_sentence_2_style(font_family_2, font_size_2, line_height_2, word_break, line_break) }}
    {# Element-Specific Style #}
    {%- include "text_block.css.jinja" with context %}
{% endblock style %}

{% block body %}
        <div class="sentence_1">
            <p> {{ sentence_1 }} </p>
        </div>
        <div class="sentence_2">
            <p> {{ sentence_2 }} </p>
        </div>
{% endblock body %}